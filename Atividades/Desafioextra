#include <stdio.h>

int main() {

//Variaveis Float e Int
//(EU = EXAME UNIFICADO) 

    float N1, N2, PPD, N3 = 0.0, EU = 0.0, nota_final;
    int fezEU, fezN3;

//Leitura e impressão das notas N1, N2 e PPD

    printf("Digite a nota N1 (entre 0 e 4.5): ");
    scanf("%f", &N1);

    if (N1 < 0 || N1 > 4.5) {
        printf("Erro: N1 invalida digite entre 0 e 4.5 \n");
        return 3;
    }

    printf("Digite a nota N2 (entre 0 e 4.5): ");
    scanf("%f", &N2);

    if (N2 < 0 || N2 > 4.5) {
        printf("Erro: N2 invalida digite entre 0 e 4.5\n");
        return 3;
    }

    printf("Digite a nota PPD (entre 0 e 1): ");
    scanf("%f", &PPD);

    if (PPD < 0 || PPD > 1) {
        printf("Erro: PPD invalida digite entre 0 e 1\n");
        return 3;
    }

//Fez ou não o exame unificado digitar a nota caso for sim

    printf("O aluno fez o Exame Unificado? (0 = nao, 1 = sim): ");
    scanf("%d", &fezEU);

    if (fezEU != 0 && fezEU != 1) {
        printf("Erro:EU invalida\n");
        return 3;
    }

    if (fezEU == 1) {
        printf("Digite a nota do Exame Unificado (entre 0 e 1): ");
        scanf("%f", &EU);
        if (EU < 0 || EU > 1) {
            printf("Erro: Nota do Exame Unificado invalida digite entre 0 e 1\n");
            return 3;
        }
    }

//Fez n3 ou não e digitar a nota caso a resposta seja sim

    printf("O aluno fez a N3? (0 = nao, 1 = sim): ");
    scanf("%d", &fezN3);

    if (fezN3 != 0 && fezN3 != 1) {
        printf("Erro:N3 invalida\n");
        return 3;
    }

    if (fezN3 == 1) {
        printf("Digite a nota N3 (entre 0 e 4.5): ");
        scanf("%f", &N3);
        if (N3 < 0 || N3 > 4.5) {
            printf("Erro:Nota N3 invalida digite entre 0 e 4.5\n");
            return 3;
        }

//Substituir a nota da n1 e n2 por n3

        if (N1 < N2) {
            N1 = N3;
        } else {
            N2 = N3;
        }
    }

//Calculo da nota final

    nota_final = N1 + N2 + PPD + EU;

//Se a nota final está entre 0 e 10/ 10(o maximo)

    if (nota_final > 10) {
        nota_final = 10;
    } else if (nota_final < 0) {
        nota_final = 0;
    }

//Resultado final

    printf("Nota final: %.2f\n", nota_final);

    if (nota_final >= 6) {
        printf("Aprovado\n");
    } else {
        printf("Reprovado\n");
    }

    return 0;
}
